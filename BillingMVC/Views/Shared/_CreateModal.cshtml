@using BillingMVC.Web.Models.Enum
@model BillViewModel

<div id="modalContainer">
    <div class="modal fade" id="createBillModal" tabindex="-1" 
         aria-labelledby="createBillModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createBillModalLabel">
                    Adicionar Nova Despesa</h5>
                    <button type="button" class="btn-close" 
                            data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body" style="padding-top: 1px;">
                    <form method="post" asp-controller="Bill" 
                          asp-action="Create" 
                          id="createBillForm" novalidate>
                        <div id="errorMessages" 
                             class="alert alert-danger d-none"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row mt-1">
                            <div class="col-6">
                                <label asp-for="Name" class="form-label"></label>
                                <textarea asp-for="Name"
                                          class="form-control mt-1"
                                          style="height: 50px;"
                                          placeholder="Nome da despesa"></textarea>
                                <span asp-validation-for="Name" 
                                      class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="PurchaseDate"
                                       class="form-label">Data da Despesa</label>
                                <input asp-for="PurchaseDate"
                                       class="form-control mt-1"
                                       type="date" />
                                <span asp-validation-for="PurchaseDate" 
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <label asp-for="Type" class="form-label">Tipo</label>
                                <select asp-for="Type"
                                        asp-items="@Html.GetEnumSelectList<BillTypeVM>()"
                                        class="form-control mt-0">
                                    <option value="" selected>Selecione</option>
                                </select>
                                <span asp-validation-for="Type" 
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <label asp-for="Source" class="form-label">
                                Source</label>
                                <textarea asp-for="Source"
                                          class="form-control mt-0"
                                          style="height: 50px;"
                                          placeholder="Origem"></textarea>
                                <span asp-validation-for="Source" 
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6">
                                <label asp-for="Currency" class="form-label">
                                Moeda</label>
                                <select asp-for="Currency"
                                        asp-items="@Html.GetEnumSelectList<CurrencyVM>()"
                                        class="form-control mt-0">
                                    <option value="" selected>Selecione</option>
                                </select>
                                <span asp-validation-for="Currency" 
                                      class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label asp-for="ValueString" 
                                       class="form-label">Valor</label>
                                <input asp-for="ValueString" 
                                       class="form-control mt-0"
                                       type="number" step="0.01" />
                                <span asp-validation-for="ValueString" 
                                      class="text-danger"></span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" 
                            data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="saveBillButton" 
                            class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>