@using BillingMVC.Web.Models.Enum
@using System.Globalization
@model BillViewModel
@{ 
    var value = Model.ValueString.Replace(',', '.');
}

<div class="modal fade" id="editModal-@Model.Id" tabindex="-1" aria-labelledby="modalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel-@Model.Id">Editar Despesa - @Model.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body" style="padding-top: 1px;">
                <form method="post" asp-action="Update" asp-controller="Bill" id="editBillForm-@Model.Id" novalidate>
                    <div id="editErrorMessages" class="alert alert-danger d-none"></div>
                    <input type="hidden" name="Id" value="@Model.Id" asp-for="Id" />
                    <div class="row mt-1">
                        <div class="col-6">
                            <label asp-for="Name" class="form-label"></label>
                            <textarea asp-for="Name" class="form-control mt-1" style="height: 50px;" placeholder="Nome da despesa"></textarea>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-6">
                            <label asp-for="PurchaseDate"
                                   class="form-label">Data da Despesa</label>
                            <input asp-for="PurchaseDate"
                                   class="form-control mt-1"
                                   type="date" value="@Model.PurchaseDate.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <label asp-for="Type" class="form-label">Tipo</label>
                            <select asp-for="Type"
                                    asp-items="@Html.GetEnumSelectList<BillTypeVM>()"
                                    class="form-control mt-0">
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <label asp-for="Source" class="form-label"></label>
                            <textarea asp-for="Source"
                                      class="form-control mt-0"
                                      style="height: 50px;"
                                      placeholder="Origem"></textarea>
                            <span asp-validation-for="Source" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6">
                            <label asp-for="Currency" class="form-label">Moeda</label>
                            <select asp-for="Currency"
                                    asp-items="@Html.GetEnumSelectList<CurrencyVM>()"
                                    class="form-control mt-0">
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>

                        <div class="col-6">
                            <label asp-for="ValueString" class="form-label">Valor</label>
                            <input asp-for="ValueString" class="form-control mt-0"
                                   type="number" step="0.01" value="@value"/>
                            <span asp-validation-for="ValueString" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <a type="button" asp-action="Delete" asp-controller="Bill" asp-route-id="@Model.Id" class="btn btn-danger">Deletar Despesa</a>
                <div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" id="saveEditButton-@Model.Id" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </div>
        </div>
    </div>
</div>